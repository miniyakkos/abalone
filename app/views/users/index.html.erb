<section class="section facilities__index">
  <div class="container facilities__index__container">
    <div class="facilities__index__container__header">
      <h1 class="title">Users</h1>
      <%= link_to new_user_path, class: "button-primary" do %>
        New User <%= image_tag  "icons/plus.png", size: 17 %>
      <% end %>
    </div>

    <table class="table  table-hover table-responsive-sm">
      <thead>
        <tr class="bg-dark-light">
          <th>ID</th>
          <th>Email</th>
          <th>Role</th>
          <th>Organization</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.email %></td>
            <td><%= user.role %></td>
            <td><%= user.organization.name %></td>
            <td><%= link_to 'Show', user %></td>
            <td><%= link_to image_tag("icons/edit.svg", size: 24), edit_user_path(user) %></td>
            <td>
              <% unless user == current_user %>
                <%= link_to image_tag("icons/trash.svg", size: 24), user, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
