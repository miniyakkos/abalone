<section class="section facilities__index">
  <div class="container facilities__index__container">
    <div class="facilities__index__container__header">
      <h1 class="title">Tanks</h1>
      <%= link_to csv_upload_tanks_path, class: "button-primary" do %>
        CSV Upload <%= image_tag  "icons/plus.png", size: 17 %>
      <% end %>
      <%= link_to new_tank_path, class: "button-primary" do %>
        New Tank <%= image_tag  "icons/plus.png", size: 17 %>
      <% end %>
    </div>

    <table class="table  table-hover table-responsive-sm">
      <thead>
        <tr class="bg-dark-light">
          <th>Name</th>
          <th>Facility</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @tanks.each do |tank| %>
          <tr>
            <td><%= tank.name %></td>
            <td><%= tank.facility_name %></td>
            <td><%= link_to 'Show', tank %></td>
            <td><%= link_to image_tag("icons/edit.svg", size: 24), edit_tank_path(tank) %></td>
            <td><%= link_to image_tag("icons/trash.svg", size: 24), tank, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
